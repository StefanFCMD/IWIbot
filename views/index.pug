extends layout

block head
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="javascripts/bundle.min.js")
    link(rel='stylesheet', href='/stylesheets/login.css')
    script(src='./javascripts/jquery.leanModal.min.js')
    link(rel='stylesheet', href='https://unpkg.com/leaflet@1.3.1/dist/leaflet.css')
    script(src='https://unpkg.com/leaflet@1.3.1/dist/leaflet.js')

block content
    header.headerCustom
        .text-center
            h1= title
            p Welcome to #{title}
        nav.navbar.navbar-default
            .container-fluid
              .navbar-header
                 button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar")
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
              div.collapse.navbar-collapse#myNavbar
               ul.nav.navbar-nav
                        li.active
                            a(href="/") IWIBot
                        li
                            a#modal_trigger(href='#modal') Login
                        li
                          a.historyToggle.button(href="#")
                              //button.btn.btn-outline-success.my-2.my-sm-0.hider.button(href="#") History
                              i(class="fa fa-comments fa-lg toggleIcon")
                              span.notification
              //Navbar Form start!
              form#chatForm.navbar-form.navbar-search
                      .form-group
                          input#messageField.form-control(type='text', placeholder='Frag mich was...')
                      button.btn.btn-default.hidden-xs.hidden-sm(type='submit') Submit
    //Login Popup start!
    #modal.popupContainer(style='display:none;')
        header.popupHeader
            span.header_title Login
            span.modal_close
                i.fa.fa-times
        section.popupBody
            // Username & Password Login form
            .user_login
                .loginForm
                    div.invalidInput Username or Password wrong!
                    div.noSemesterSelected Please select a Semester!
                    label Username
                    input(type='text' name="username")
                    br
                    label Password
                    input(type='password' name="password")
                    br
                    label Semester
                        select#selectSemester(name="semester")
                            option(value="0") Semester w√§hlen...
                            option(value="1") 1. Semester
                            option(value="2") 2. Semester
                            option(value="3") 3. Semester
                            option(value="4") 4. Semester
                            option(value="5") 5. Semester
                            option(value="6") 6. Semester
                            option(value="7") 7. Semester
                    br
                    .checkbox
                        input#remember(type='checkbox')
                        label(for='remember') Remember me on this computer
                    br
                    button.btn.btn_red(type='submit') Login
    //Chat history start!
    .history
        div#chat
            .container.chatcontainer
            

    .content
        .container
          .voice
            div.row
                div.col-lg-5
                div.col-lg-2.text-center: div#mainDiv: button.btn.btn-circle.notRecording
                    i.fa.fa-microphone.fa-3x
                div.col-lg-5
            div.row
                div.col-lg-4
                div.col-lg-8
            div.row
                div.col-lg-4: div.stt#sttContent Warten auf Aufnahme...
                div.col-lg-8

    .mapcontainer
        div#map.map